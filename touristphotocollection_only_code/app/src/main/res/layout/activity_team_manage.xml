<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TeamManage"
        android:orientation="vertical">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="管理队伍"
              android:textSize="30dp"
              android:textColor="@color/black"
              android:layout_gravity="center_horizontal"
              android:paddingTop="80dp"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="*您的队伍成员*"
              android:textSize="15dp"
              android:textColor="@color/black"
              android:layout_gravity="center_horizontal"
              android:paddingTop="8dp"
    />
    <TextView
            android:id="@+id/teamShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTeam"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
    <EditText
            android:id="@+id/memberAccount"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    <Button
            android:id="@+id/newMember"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="添加游客"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/refreshTeam"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="刷新队伍"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/clearTeam"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="清空队伍"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    <Button
            android:id="@+id/returnToMainTeam"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="返回主页"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

</LinearLayout>